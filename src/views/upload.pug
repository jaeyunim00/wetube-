extends partials/base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="post", action="/videos/upload", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name = "video")
        input(name = 'title', type="text", placeholder = "Title", required)
        input(type="text", placeholder = "Description", required, name = "description")
        input(type="text", placeholder = "Hashtags, seperate by comma", required, name = "hashtags")
        input(type="submit", value="upload")