extends ./partials/base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder = "name", type = "text", required, name = "name")
        input(placeholder = "email", type = "email", required, name = "email")
        input(placeholder = "username", type = "text", required, name = "username")
        input(placeholder = "Password", type = "password", name = "password")
        input(placeholder = "Confirm Password", type = "password", required, name = "passwordCheck")
        input(placeholder = "location", type = "text", required, name = "location")
        input(type="submit", value="Join")
    hr
    div
     span Already have  an account? 
     a(href="/login") log in now &rarr;